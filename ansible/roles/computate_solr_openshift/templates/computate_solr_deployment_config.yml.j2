apiVersion: apps.openshift.io/v1
kind: DeploymentConfig
spec:
  replicas: 1
  revisionHistoryLimit: 10
  selector:
    app: computate-solr
    deploymentConfig: computate-solr
    deploymentconfig: computate-solr
  strategy:
    activeDeadlineSeconds: 21600
    recreateParams:
      timeoutSeconds: 600
    resources: {}
    rollingParams:
      intervalSeconds: 1
      maxSurge: 25%
      maxUnavailable: 25%
      timeoutSeconds: 600
      updatePeriodSeconds: 1
    type: Recreate
  template:
    metadata:
      annotations:
        openshift.io/generated-by: OpenShiftNewApp
      creationTimestamp: null
      labels:
        app: computate-solr
        application: computate-solr
        deploymentConfig: computate-solr
        deploymentconfig: computate-solr
      name: computate-solr
    spec:
      containers:
        - env:
            - name: ZK_HOSTNAME
              value: computate-zookeeper.{{COMPUTATE_ZOOKEEPER_NAMESPACE}}.svc
          imagePullPolicy: Always
          name: computate-solr
          ports:
            - containerPort: 8080
              name: solr-port
              protocol: TCP
          resources:
            limits:
              memory: 2000Mi
          securityContext:
            privileged: false
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
            - mountPath: /srv/solr/data
              name: computate-solr-data-volume
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      terminationGracePeriodSeconds: 30
      volumes:
        - name: computate-solr-data-volume
          persistentVolumeClaim:
            claimName: computate-solr-persistent-volume-claim
  test: false
  triggers:
    - imageChangeParams:
        automatic: true
        containerNames:
          - computate-solr
        from:
          kind: ImageStreamTag
          name: 'computate-solr-image-stream:latest'
          namespace: school
      type: ImageChange
    - type: ConfigChange

